<Page x:ConnectionId='1'
    x:Class="InventoryCheck.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InventoryCheck"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='2' Content="Pic"                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="100"/>
        <CaptureElement x:ConnectionId='3' Name="PreviewControl" Stretch="Uniform" Height="200" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:ConnectionId='4' x:Name="jsonInfo" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap"
                   Height="200" Width="200"/>
    </Grid>
</Page>

